<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="Theme.TomasuloSimulator" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_800</item>
        <item name="colorPrimaryVariant">@color/green_500</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <style name="InstructionField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">12.5sp</item>
        <item name="android:saveEnabled">false</item>
    </style>

    <style name="SimulationField">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">2dp</item>
        <item name="android:paddingEnd">2dp</item>
        <item name="autoSizeMaxTextSize">16sp</item>
        <item name="autoSizeMinTextSize">8sp</item>
        <item name="autoSizeStepGranularity">0.25sp</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="SimulationField.Label" parent="SimulationField">
        <item name="android:background">@color/gray</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SimulationField.Label.Header" parent="SimulationField.Label">
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/green_500</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SimulationField.Value" parent="SimulationField" />

    <style name="SimulationField.Value.RemainingCycles" parent="SimulationField.Value">
        <item name="android:textColor">@color/green_800</item>
    </style>

</resources>
